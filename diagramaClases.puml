package "riego.sensores" {
    class TemperaturaReaderTask {
        -_ultima_temperatura: float
        -_stop_event: Event
        +__init__()
        +run(): void
        -_leer_sensor(): float
        +get_ultima_temperatura(): float
        +detener(): void
    }

    class HumedadReaderTask {
        -_ultima_humedad: float
        -_stop_event: Event
        +__init__()
        +run(): void
        -_leer_sensor(): float
        +get_ultima_humedad(): float
        +detener(): void
